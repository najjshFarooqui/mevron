<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/bg_main"
              android:layout_height="match_parent">


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp">


        <TextView
                android:id="@+id/becomeDriverTv"
                android:height="50dp"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:lineSpacingMultiplier="1.56"
                style="@style/BecomeADriver"
                android:text="Account Verification"/>


        <RelativeLayout
                android:id="@+id/numText"
                android:layout_below="@+id/becomeDriverTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                    android:id="@+id/pleaeTellUs"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:lineSpacingMultiplier="1.25"
                    style="@style/PleaseTellUsYour"
                    android:text="we have sent you a code to your phone  "
            />

            <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/pleaeTellUs"
                    android:textColor="#FFF"
                    android:text="+919111978789"

            />


        </RelativeLayout>

        <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/events_buttons"
                android:layout_below="@+id/numText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

            <EditText
                    android:text="1"
                    android:maxLength="1"
                    android:gravity="center"
                    style="@style/otp"
                    android:layout_marginRight="4dp"

            />


            <EditText
                    android:text="1"
                    android:maxLength="1"
                    style="@style/otp"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
            />

            <EditText
                    android:text="1"
                    android:maxLength="1"
                    style="@style/otp"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
            />


            <EditText
                    android:text="1"
                    android:maxLength="1"
                    style="@style/otp"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
            />

            <EditText
                    android:text="1"
                    android:maxLength="1"
                    style="@style/otp"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
            />


        </LinearLayout>


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="send code again"
                  android:layout_marginTop="20dp"
                  android:layout_below="@+id/events_buttons"
                  android:textColor="@color/yellowText"
                  android:textStyle="italic|bold"/>

    </RelativeLayout>

</LinearLayout>