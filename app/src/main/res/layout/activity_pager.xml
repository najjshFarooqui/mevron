<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pagerContainer"
        tools:context="com.fahim.mevronrider.views.activity.PagerActivity">


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:id="@+id/layout"
                    android:background="@drawable/bg_main">

        <ImageView android:layout_width="32dp"
                   android:layout_height="32dp"
                   android:id="@+id/ivBack"
                   android:layout_marginLeft="16dp"
                   android:layout_centerVertical="true"
                   android:src="@drawable/icon_back_white"
                   android:layout_alignParentLeft="true"/>
    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_below="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/dotsBackground"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/dotsBackground"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_main"
                    android:layout_alignParentBottom="true">


        <LinearLayout

                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">


            <View android:layout_width="8dp"
                  android:layout_height="8dp"
                  android:layout_margin="8dp"
                  android:id="@+id/one"
                  android:background="@drawable/unselected"/>

            <View android:layout_width="8dp"
                  android:layout_height="8dp"
                  android:layout_margin="8dp"
                  android:id="@+id/two"
                  android:background="@drawable/unselected"/>

            <View android:layout_width="8dp"
                  android:layout_height="8dp"
                  android:layout_margin="8dp"
                  android:id="@+id/three"
                  android:background="@drawable/unselected"/>

            <View android:layout_width="8dp"
                  android:layout_height="8dp"
                  android:layout_margin="8dp"
                  android:id="@+id/four"
                  android:background="@drawable/unselected"/>

            <View android:layout_width="8dp"
                  android:layout_height="8dp"
                  android:layout_margin="8dp"
                  android:id="@+id/five"
                  android:background="@drawable/unselected"/>

            <View android:layout_width="8dp"
                  android:layout_height="8dp"
                  android:layout_margin="8dp"
                  android:id="@+id/six"
                  android:background="@drawable/unselected"/>

        </LinearLayout>

        <TextView
                android:id="@+id/btnFinishSignUp"
                android:visibility="gone"
                style="@style/regulattv"
                android:text="Finish"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:textSize="18sp"/>
    </RelativeLayout>


</RelativeLayout>