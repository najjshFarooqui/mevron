<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="300dp"
                android:background="@drawable/bg_dialog"
                android:layout_height="350dp">


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp">

        <ImageView android:id="@+id/ivProgress"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="20dp"
                   android:layout_centerHorizontal="true"
                   android:src="@drawable/icon_payment_information"

        />
        <TextView
                android:id="@+id/tvAwaiting"
                style="@style/personTv"
                android:layout_below="@+id/ivProgress"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:text="Payment Information"/>


        <TextView
                android:id="@+id/tvLabel"
                android:layout_below="@+id/tvAwaiting"
                style="@style/hintColor"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="You need to add your payment information first before you can take on a request."/>
        />

        <Button
                android:id="@+id/btnAddPaymentInfo"
                style="@style/main_btn_yellow"
                android:layout_below="@+id/tvLabel"
                android:layout_marginTop="20dp"
                android:text="Add Payment Information"/>


        <TextView
                android:id="@+id/btnAddInfoLater"
                style="@style/personTv"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                android:text="Add Later"
                android:textColor="@color/hintclor"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnAddPaymentInfo"

        />
    </RelativeLayout>


</RelativeLayout>