<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main"
        tools:context="com.fahim.mevronrider.views.activity.ApprovedActivity">


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="30dp">


        <TextView
                android:id="@+id/becomeDriverTv"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                style="@style/BecomeADriver"
                android:text="Your Account was \nApproved"/>


        <TextView
                android:id="@+id/pleaeTellUs"

                android:layout_below="@+id/becomeDriverTv"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                style="@style/PleaseTellUsYour"
                android:text="you are now ready to become one of our drivers."
                android:width="300dp"/>


        <ImageView

                android:id="@+id/approvalIv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_icon___waiting_for_aproval"
                android:layout_centerInParent="true"
        />


        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Account Approved"
                  android:textColor="@color/white"
                  android:textSize="14sp"
                  android:layout_below="@+id/approvalIv"
                  android:layout_centerHorizontal="true"/>


        <Button
                android:id="@+id/btnStartNow"
                style="@style/main_btn_yellow"
                android:layout_alignParentBottom="true"
                android:text="Start Now"
                android:textAllCaps="false"
        />
    </RelativeLayout>
</RelativeLayout>

