    <style name="nav_regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF9B9B9B</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>


    <style name="nav">
        <item name="android:background">@color/yellow</item>


    </style>


    <style name="horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layerType">software</item>
        <item name="android:background">@drawable/dotted</item>

    </style>


    <style name="regulattv">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>


    <style name="large_text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">Lato</item>
        <item name="android:textColor">#FFFE9500</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="italic_tv">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">Lato</item>
        <item name="android:textColor">#FFFE9500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="hintColor">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hintclor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

    </style>


    <style
            name="italic_yellow"
    >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">Lato</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>


    <style
            name="personTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">Lato</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/yellow</item>
        <item name="colorControlActivated">@color/hintclor</item>
    </style>


    <style
            name="ride_response">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">Lato</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">32sp</item>
    </style>


</resources>
