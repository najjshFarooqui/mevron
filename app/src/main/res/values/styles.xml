<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- XML file for the style (saved in res/values/) -->

    <style name="BecomeADriver">
        <item name="android:fontFamily">Lato</item>
        <item name="android:textColor">#FFFE9500</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style
            name="PleaseTellUsYour">
        <item name="android:fontFamily">Lato</item>
        <item name="android:textColor">#FF9B9B9B</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style
            name="PleaseTellYour">
        <item name="android:fontFamily">Lato</item>
        <item name="android:textColor">#E4DBDB</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style
            name="Email">
        <item name="android:fontFamily">Lato</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/edittext</item>
        <item name="android:textColorHint">@color/hintclor</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>


    </style>


    <style name="otp">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_otp</item>
    </style>


    <style name="main_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">Lato</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button</item>
    </style>


    <style name="main_btn_yellow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">Lato</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_yellow</item>
    </style>


